<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/eventdata_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/thaisansneue_bold"
        android:hint="ไม่มีเหตุการณ์"
        android:text="ชื่อเหตุการณ์"
        android:textColor="#F5508A"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/eventdata_recorddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/eventdata_name"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/thaisansneue_bold"
        android:text="วันที่"
        android:textSize="18sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/eventdata_bcs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/eventdata_recorddate"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/thaisansneue_bold"
        android:text="คะแนน"
        android:textSize="18sp" />
</RelativeLayout>