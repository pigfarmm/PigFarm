<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorBackground"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/Scroll_act08"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_spinId08"
                android:text="เบอร์หู"
                android:textColor="@color/Colorfont"
                android:textSize="20sp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/thaisansneue_bold"/>

            <RelativeLayout
                android:layout_width="325dp"
                android:layout_height="45dp"
                android:background="#d2d2d2"
                android:layout_marginLeft="30dp">

                <Spinner
                    android:id="@+id/spin_noteId08"
                    android:layout_width="325dp"
                    android:layout_height="45dp"
                    android:spinnerMode="dropdown"
                    />

                <ImageView
                    android:id="@+id/img_spin08"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/dropdown" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_dateNote08"
                android:text="วันที่"
                android:textColor="@color/Colorfont"
                android:textSize="20sp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/thaisansneue_bold"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_dateNote08"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:inputType="date"
                android:textSize="20sp"
                android:maxLines="1"
                android:textColor="@color/Colorfont"
                android:backgroundTint="@color/Colorfont"/>

                <ImageView
                    android:id="@+id/img_calNote08"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/edit_dateNote08"
                    android:src="@drawable/calendar" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_resual08"
                android:fontFamily="@font/thaisansneue_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ลักษณะ"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"/>

            <RelativeLayout
                android:layout_width="325dp"
                android:layout_height="45dp"
                android:background="#d2d2d2"
                android:layout_marginLeft="30dp">

                <Spinner
                    android:id="@+id/spin_result08"
                    android:layout_width="325dp"
                    android:layout_height="45dp"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:id="@+id/img_resual08"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/dropdown" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_desc08"
                android:fontFamily="@font/thaisansneue_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เหตุผล"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"/>

            <RelativeLayout
                android:layout_width="325dp"
                android:layout_height="45dp"
                android:background="#d2d2d2"
                android:layout_marginLeft="30dp">

            <Spinner
                android:id="@+id/spin_result09"
                android:layout_width="325dp"
                android:layout_height="45dp"
                android:spinnerMode="dropdown" />

            <ImageView
                android:id="@+id/img_resual09"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/dropdown" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_imgpro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/thaisansneue_bold"
                android:text="ระดับหุ่นสุกร"
                android:textColor="@color/Colorfont"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/edit_imgpro"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:inputType="date"
                android:textSize="20sp"
                android:fontFamily="@font/thaisansneue_regular"
                android:textColor="@color/Colorfont"
                android:backgroundTint="@color/Colorfont"/>

            <ImageView
                android:id="@+id/img_process"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="50dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/imgprocess"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/txt_imgprocess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/thaisansneue_bold"
                android:text="ถ่ายรูปประเมินหุ่นสุกร"
                android:textColor="@color/Colorfont"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_flacAct08"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@color/ColorNavBar"
                android:fontFamily="@font/thaisansneue_bold"
                android:textColor="@color/white"
                android:text="บันทึกข้อมูล"
                android:textSize="25dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>