<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="117dp"
    tools:layout_editor_absoluteY="0dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/pigicon"
            android:layout_width="58dp"
            android:layout_height="56dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/pigvector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.53" />

        <TextView
            android:id="@+id/textnumberid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/thaisansneue_bold"
            android:text="ลำดับที่"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/pigicon"
            app:layout_constraintTop_toBottomOf="@+id/textfarm" />

        <TextView
            android:id="@+id/textfarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/thaisansneue_bold"
            android:text="เบอร์หู"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/pigicon"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>