<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/ColorBG"
    >

    <!--StartNavBar-->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_report_a1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        card_view:cardBackgroundColor="@color/ColorNavBar">

        <TextView
            android:id="@+id/txt_report_a1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/thaisansneue_bold"
            android:gravity="center"
            android:text="ประสิทธิภาพกลุ่มผสม"
            android:layout_marginTop="3dp"
            android:textColor="#ffffff"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/img_back"
            android:layout_marginTop="7dp"
            android:layout_width="25dp"
            android:layout_height="28dp"
            android:src="@drawable/back"
            android:layout_gravity="left"
            android:onClick="onBackClick"
            android:layout_marginLeft="15dp"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_show"
        android:layout_below="@+id/card_report_a1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        card_view:cardBackgroundColor="@color/ColorShow">

        <TextView
            android:fontFamily="@font/thaisansneue_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ฟาร์ม:"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/thaisansneue_bold"
            android:text="ยูนิต:"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txt_farm"
            android:fontFamily="@font/thaisansneue_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5555"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="110dp"/>

        <TextView
            android:id="@+id/txt_unit"
            android:fontFamily="@font/thaisansneue_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6666"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="270dp"/>

    </android.support.v7.widget.CardView>
    <!--endNavBar-->

    <ScrollView android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/card_show"
        android:background="@color/ColorBG"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_ฺB1"
                android:text="วันสุดท้าย"
                android:textColor="@color/Colorfont"
                android:textSize="20sp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/thaisansneue_bold"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <EditText
                    android:id="@+id/edit_B1"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:hint="วันสุดท้าย"
                    android:textSize="20sp"
                    android:textColor="@color/Colorfont"
                    android:fontFamily="@font/thaisansneue_bold"
                    android:backgroundTint="@color/Colorfont"/>

                <ImageView
                    android:id="@+id/img_B1"
                    android:layout_width="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="35dp"
                    android:layout_toRightOf="@+id/edit_B1"
                    android:src="@drawable/calendar" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="180dp"
                    android:layout_marginRight="30dp"
                    >

                </RelativeLayout>


            </RelativeLayout>



            <TextView
                android:id="@+id/txt_B2"
                android:text="ความยาวช่วงเวลา"
                android:textColor="@color/Colorfont"
                android:textSize="20sp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/thaisansneue_bold"/>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <EditText
                    android:id="@+id/edit_B2"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:hint="เริ่ม"
                    android:textSize="20sp"
                    android:textColor="@color/Colorfont"
                    android:fontFamily="@font/thaisansneue_bold"
                    android:backgroundTint="@color/Colorfont"/>

                <Spinner
                    android:id="@+id/spnlengthtime"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/edit_B2"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="-2dp"
                    android:layout_marginBottom="0dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_B3"
                android:text="การจำแนกจำนวนท้อง"
                android:textColor="@color/Colorfont"
                android:textSize="20sp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/thaisansneue_bold"/>

                <Spinner
                    android:id="@+id/select_type_b3"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/txt_B3"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="20dp"/>


            <EditText
                android:id="@+id/pregnant_edt"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:hint="กรอกจำนวนท้อง"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/select_type_b3"
                android:textSize="20sp"
                android:inputType="number"
                android:textColor="@color/Colorfont"
                android:backgroundTint="@color/Colorfont"
                android:fontFamily="@font/thaisansneue_bold"/>

                <TextView
                    android:id="@+id/txt_to"
                    android:layout_width="wrap_content"
                    android:layout_height="38sp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/thaisansneue_bold"
                    android:layout_toRightOf="@+id/pregnant_edt"
                    android:text="ถึง"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/pregnant_edt2"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Colorfont"
                    android:fontFamily="@font/thaisansneue_bold"
                    android:hint="กรอกจำนวนท้อง"
                    android:layout_toRightOf="@+id/txt_to"
                    android:inputType="number"
                    android:layout_below="@+id/select_type_b3"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/Colorfont"
                    android:textSize="20sp" />

            </RelativeLayout>

            <Button
                android:id="@+id/btn_A1"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@color/ColorNavBar"
                android:textColor="@color/ColorBox"
                android:fontFamily="@font/thaisansneue_bold"
                android:text="รายงาน"
                android:textSize="25dp" />

            <TextView
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Colorfont"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>



</RelativeLayout>


