<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorBackground">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                card_view:cardCornerRadius="4dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_pig"
                        android:layout_width="42dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:clickable="true"
                        android:src="@drawable/pig" />

                    <ImageView
                        android:id="@+id/editprofile"
                        android:layout_width="37dp"
                        android:layout_height="36dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/editme" />

                    <TextView
                        android:id="@+id/text_pigid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:layout_marginTop="7sp"
                        android:layout_toRightOf="@id/img_pig"
                        android:fontFamily="@font/thaisansneue_bold"
                        android:gravity="center"
                        android:text="ไม่มีข้อมูล"
                        android:textColor="#000000"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/texttitle_recorddate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/texttitle_breed"
                        android:layout_below="@+id/img_pig"
                        android:fontFamily="@font/thaisansneue_bold"
                        android:text="วันที่เปิดประวัติ"
                        android:textColor="#F5508A"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/text_recorddate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_pigid"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/texttitle_recorddate"
                        android:fontFamily="@font/thaisansneue_regular"
                        android:text="ไม่มีข้อมูล"
                        android:textColor="#000000"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/texttitle_bd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/texttitle_recorddate"
                        android:layout_marginLeft="115dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/thaisansneue_bold"
                        android:text="วันเกิด"
                        android:textColor="#F5508A"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/text_bd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/text_recorddate"
                        android:layout_alignTop="@+id/texttitle_bd"
                        android:fontFamily="@font/thaisansneue_regular"
                        android:text="ไม่มีข้อมูล"
                        android:textColor="#000000"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/texttitle_breed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/texttitle_bd"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/thaisansneue_bold"
                        android:text="สายพันธุ์"
                        android:textColor="#F5508A"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/text_breed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/text_recorddate"
                        android:layout_alignTop="@+id/texttitle_breed"
                        android:fontFamily="@font/thaisansneue_regular"
                        android:text="ไม่มีข้อมูล"
                        android:textColor="#00000A"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/texttitle_breeder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/texttitle_breed"
                        android:layout_marginLeft="112dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/thaisansneue_bold"
                        android:text="เบอร์พ่อ"
                        android:textColor="#F5508A"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/text_breeder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_breed"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/texttitle_breeder"
                        android:fontFamily="@font/thaisansneue_regular"
                        android:text="ไม่มีข้อมูล"
                        android:textColor="#00000A"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/texttitle_bredder1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/texttitle_breeder"
                        android:layout_marginLeft="115dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/thaisansneue_bold"
                        android:text="เบอร์แม่"
                        android:textColor="#F5508A"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/text_breeder1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_breeder"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/texttitle_bredder1"
                        android:fontFamily="@font/thaisansneue_regular"
                        android:text="ไม่มีข้อมูล"
                        android:textColor="#00000A"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/texttitle_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/texttitle_bredder1"
                        android:layout_marginLeft="105dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/thaisansneue_bold"
                        android:text="แหล่งที่ได้"
                        android:textColor="#F5508A"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/text_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_breeder1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/texttitle_from"
                        android:fontFamily="@font/thaisansneue_regular"
                        android:text="ไม่มีข้อมูล"
                        android:textColor="#00000A"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/texttitle_reserveid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/texttitle_from"
                        android:layout_marginLeft="86dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/thaisansneue_bold"
                        android:text="เบอร์หูสำรอง"
                        android:textColor="#F5508A"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/text_reserveid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_from"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/texttitle_reserveid"
                        android:fontFamily="@font/thaisansneue_regular"
                        android:text="ไม่มีข้อมูล"
                        android:textColor="#00000A"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/texttitle_preglist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/texttitle_reserveid"
                        android:layout_marginLeft="86dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/thaisansneue_bold"
                        android:text="จำนวนท้อง"
                        android:textColor="#F5508A"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/text_preglist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_reserveid"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/texttitle_preglist"
                        android:fontFamily="@font/thaisansneue_regular"
                        android:text="-"
                        android:textColor="#00000A"
                        android:textSize="18sp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                card_view:cardCornerRadius="4dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_event"
                        android:layout_width="42dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/protect" />

                    <ImageView
                        android:id="@+id/editevent"
                        android:layout_width="37dp"
                        android:layout_height="36dp"
                        android:layout_alignParentRight="true"
                        android:clickable="true"
                        android:src="@drawable/editme" />

                    <TextView
                        android:id="@+id/txt_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:layout_marginTop="7sp"
                        android:layout_toRightOf="@id/img_event"
                        android:fontFamily="@font/thaisansneue_bold"
                        android:gravity="center"
                        android:text="เหตุการณ์ที่เกิดขึ้น"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerview2"
                        android:layout_width="320dp"
                        android:layout_height="278dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="50dp"
                        android:clickable="true" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>



        </LinearLayout>
    </ScrollView>
</RelativeLayout>