<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/ColorBackground">

<!--StartNavBar-->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_report"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        card_view:cardBackgroundColor="@color/ColorNavBar">

        <TextView
            android:id="@+id/txt_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/thaisansneue_bold"
            android:gravity="center"
            android:text="รายงาน"
            android:layout_marginTop="3dp"
            android:textColor="#ffffff"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/img_back"
            android:layout_marginTop="7dp"
            android:layout_width="25dp"
            android:layout_height="28dp"
            android:src="@drawable/back"
            android:layout_gravity="left"
            android:onClick="onBackClick"
            android:layout_marginLeft="15dp"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_show"
        android:layout_below="@+id/card_report"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        card_view:cardBackgroundColor="@color/ColorShow">

        <TextView
            android:fontFamily="@font/thaisansneue_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ฟาร์ม:"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/thaisansneue_bold"
            android:text="ยูนิต:"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txt_farm"
            android:fontFamily="@font/thaisansneue_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5555"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="110dp"/>

        <TextView
            android:id="@+id/txt_unit"
            android:fontFamily="@font/thaisansneue_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6666"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="270dp"/>

    </android.support.v7.widget.CardView>
<!--endNavBar-->


    <ScrollView android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_show"
        android:id="@+id/scrollView">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >


            <android.support.v7.widget.CardView
                android:id="@+id/status_pig"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/ColorBackground"
                card_view:cardBackgroundColor="#ffff">

                <ImageView
                    android:id="@+id/img_nut"
                    android:layout_marginTop="5dp"
                    android:layout_width="70dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/info" />

                <TextView
                    android:id="@+id/txt_IDnut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_about"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/thaisansneue_bold"
                    android:text="สถานภาพสุกร"
                    android:textColor="#808080"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/img_nut"
                    android:layout_marginTop="12dp"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/arow_right" />

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/power_pig"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="1dp"
                android:background="@color/ColorBackground"
                card_view:cardBackgroundColor="#ffff">

                <ImageView
                    android:id="@+id/img_nut"
                    android:layout_marginTop="5dp"
                    android:layout_width="70dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/info" />

                <TextView
                    android:id="@+id/txt_IDnut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_about"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/thaisansneue_bold"
                    android:text="ประสิทธิภาพพ่อแม่พันธุ์"
                    android:textColor="#808080"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/img_nut"
                    android:layout_marginTop="12dp"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/arow_right" />

            </android.support.v7.widget.CardView>




        </LinearLayout>
    </ScrollView>


</RelativeLayout>


