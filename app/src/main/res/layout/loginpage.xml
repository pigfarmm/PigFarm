<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/bg">

    <ImageView
        android:id="@+id/piglogo"
        android:layout_width="148dp"
        android:layout_height="165dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:src="@drawable/piglogo" />

    <TextView
        android:id="@+id/titlelogin"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:fontFamily="@font/thaisansneue_regular"
        android:layout_below="@+id/piglogo"
        android:layout_centerHorizontal="true"
        android:text="กรุณาเข้าสู่ระบบ"
        android:textColor="@color/white"
        android:textSize="25sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="379dp"
        android:layout_marginTop="280dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/logoperson"
            android:layout_width="50dp"
            android:layout_height="47dp"
            android:layout_below="@+id/titlelogin"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/peopleico"
            android:visibility="visible" />

        <EditText
            android:id="@+id/txtUsername"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titlelogin"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/thaisansneue_regular"
            android:hint="กรอกชื่อผู้ใช้งาน"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/logopassword"
            android:layout_width="46dp"
            android:layout_height="41dp"
            android:layout_below="@+id/logoperson"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/key" />

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtUsername"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/thaisansneue_regular"
            android:hint="กรอกรหัสผ่าน"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="#000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="191dp"
            android:layout_height="48dp"
            android:layout_below="@+id/txtPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@color/bg"
            android:textColor="@color/white"
            android:fontFamily="@font/thaisansneue_regular"
            android:text="เข้าสู่ระบบ"
            android:textSize="25sp" />

        <ProgressBar
            android:id="@+id/progressLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnSubmit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:progress="50" />

        <!--<TextView-->
            <!--android:id="@+id/linkregis"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/progressLogin"-->
            <!--android:text="สมัครสมาชิก"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:fontFamily="@font/thaisansneue_regular"-->
            <!--android:textSize="20sp"-->
            <!--android:textColor="@color/black"-->
            <!--android:onClick="onClick"-->
            <!--android:clickable="true"/>-->

    </RelativeLayout>

</RelativeLayout>