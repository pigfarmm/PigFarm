<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorNavBar">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="221dp"
        android:layout_height="232dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_logo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-20dp"
        android:fontFamily="@font/thaisansneue_bold"
        android:gravity="center"
        android:text="PIG-A-BOO"
        android:textColor="#ffffff"
        android:textSize="55dp" />

    <ImageView
        android:id="@+id/logo_kku"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="51dp"
        android:src="@drawable/logo_kku" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/logo_kku"
        android:layout_marginBottom="-28dp"
        android:fontFamily="@font/thaisansneue_regular"
        android:gravity="center"
        android:text="Version 1.0 (DEMO)"
        android:textSize="20dp" />

    <ProgressBar
        android:id="@+id/signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19dp"
        android:padding="16dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:layout_centerHorizontal="true"
        android:indeterminateTint="@color/white" />


</RelativeLayout>